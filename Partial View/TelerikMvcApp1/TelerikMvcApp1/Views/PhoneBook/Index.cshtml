<div class="form-group">
    <div class="col-md-10">
        @Html.DropDownList("PhoneBookId", (SelectList)ViewBag.PhoneBookId, "--------Select Number--------", new { @class = "form-control", @onchange = "AllInfo(this.value)" })
    </div>
</div>

<div id="load"></div>
<script type="text/javascript">
    function AllInfo(value)
    {
        if (value == '')
        {
            document.getElementById('load').style.display = 'none';
        }
        else {
           $('#load').load('@(Url.Action("_Allinfo", "PhoneBook",null,Request.Url.Scheme))?PhoneBookID=' + value);
           document.getElementById('load').style.display = 'block';
        }
    }
</script>

